                    <GradientStop Color="#FFECF9FF"/>
                    <GradientStop Color="#FF68C8DA" Offset="1"/>
                    <GradientStop Color="#FFE5F1F7" Offset="0.245"/>
                    <GradientStop Color="#FFD3EBF3" Offset="0.466"/>
                </LinearGradientBrush>
            </TextBox.Background>

        </TextBox>
        <TextBox Text="{Binding product.Count}" x:Name="P1_Копировать5" Foreground="Black" Cursor="Pen" Margin="560,14,404,38" RenderTransformOrigin="0.563,0.65" Grid.Row="1">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFECF9FF"/>
                    <GradientStop Color="#FF68C8DA" Offset="1"/>
                    <GradientStop Color="#FFE5F1F7" Offset="0.245"/>
                    <GradientStop Color="#FFD3EBF3" Offset="0.466"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <Button Command="{Binding AddProductCommand}" Margin="895,22,10,10" Cursor="Hand" Grid.Row="1">Добавить</Button>
        <TextBox Text="{Binding product.In}" x:Name="P1_Копировать6" Margin="415,14,548,37" Foreground="Black" Cursor="Pen" Grid.Row="1">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFECF9FF"/>
                    <GradientStop Color="#FF68C8DA" Offset="1"/>
                    <GradientStop Color="#FFE5F1F7" Offset="0.245"/>
                    <GradientStop Color="#FFD3EBF3" Offset="0.466"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <Button Command="{Binding RemoveProductCommand}" Margin="895,410,10,26" Cursor="Hand" Content="Удалить"/>
        <Label Content="Тематика" HorizontalAlignment="Left" Margin="5,423,0,0" VerticalAlignment="Top"/>
        <Label Content="Категория" HorizontalAlignment="Left" Margin="0,4,0,0" VerticalAlignment="Top" Height="39" Grid.Row="1"/>
        <Label Content="Год" HorizontalAlignment="Left" Margin="114,11,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="BookId" HorizontalAlignment="Left" Margin="304,423,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.53,0.655"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="222,420,0,0" VerticalAlignment="Top"/>
        <Label Content="В заказе" HorizontalAlignment="Left" Margin="550,460,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="304,6,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Выдано" HorizontalAlignment="Center" Margin="0,461,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Возр. ограничение" HorizontalAlignment="Left" Margin="165,3,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Производитель" HorizontalAlignment="Left" Margin="81,419,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding product.Out}" x:Name="P1_Копировать7" Margin="482,15,482,37" Foreground="Black" Cursor="Pen" Grid.Row="1">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFECF9FF"/>
                    <GradientStop Color="#FF68C8DA" Offset="1"/>
                    <GradientStop Color="#FFE5F1F7" Offset="0.245"/>
                    <GradientStop Color="#FFD3EBF3" Offset="0.466"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <Button Grid.Row="0" Content="Обновить таблицу" Command="{Binding LoadProductsCommand}" Margin="0,0,0,360"/>
        <Label Content="Пришло" HorizontalAlignment="Left" Margin="402,461,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <ComboBox ItemsSource="{Binding Manufacturers}" Text="Производитель" HorizontalAlignment="Left" Height="21" Margin="94,466,0,0" VerticalAlignment="Top" Width="66" SelectedItem="{Binding product.Manufacturer}" Grid.RowSpan="2"/>
        <ComboBox ItemsSource="{Binding Ages}" Text="Возраст"  HorizontalAlignment="Left" Height="27" Margin="181,35,0,0" VerticalAlignment="Top" Width="83" SelectedItem="{Binding product.Age}" Grid.Row="1"/>-->


