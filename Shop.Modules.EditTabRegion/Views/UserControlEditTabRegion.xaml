                    <GradientStop Color="#FFD3EBF3" Offset="0.466"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <TextBox Text="{Binding product.Subject}" x:Name="P4" Margin="0,454,919,2" Foreground="Black" Cursor="Pen" RenderTransformOrigin="0.63,4.167">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFECF9FF"/>
                    <GradientStop Color="#FF68C8DA" Offset="1"/>
                    <GradientStop Color="#FFE5F1F7" Offset="0.245"/>
                    <GradientStop Color="#FFD3EBF3" Offset="0.466"/>
