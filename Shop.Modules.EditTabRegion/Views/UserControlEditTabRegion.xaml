                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFECF9FF"/>
                    <GradientStop Color="#FF68C8DA" Offset="1"/>
                    <GradientStop Color="#FFE5F1F7" Offset="0.245"/>
                    <GradientStop Color="#FFD3EBF3" Offset="0.466"/>
                </LinearGradientBrush>
            </TextBox.Background>

        </TextBox>
        <TextBox Text="{Binding product.Price}" x:Name="P1_Копировать4" Foreground="Black" Cursor="Pen" Margin="300,41,615,10" RenderTransformOrigin="0.471,0.484" Grid.Row="1">
