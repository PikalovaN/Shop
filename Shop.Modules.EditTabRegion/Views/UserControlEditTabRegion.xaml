        </TextBox>
        <TextBox Text="{Binding product.Name}" x:Name="P1_Копировать1" Margin="172,455,727,2" Foreground="Black" Cursor="Pen">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
