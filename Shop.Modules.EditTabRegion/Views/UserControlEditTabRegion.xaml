        <TextBox Text="{Binding product.Year}" x:Name="P1_Копировать3" Margin="98,41,840,10" Foreground="Black" Cursor="Pen" RenderTransformOrigin="0.435,0.526" Grid.Row="1">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFECF9FF"/>
                    <GradientStop Color="#FF68C8DA" Offset="1"/>
                    <GradientStop Color="#FFE5F1F7" Offset="0.245"/>
                    <GradientStop Color="#FFD3EBF3" Offset="0.466"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <TextBox Text="{Binding product.Id}" x:Name="P1_Копировать" Margin="300,455,615,2" Foreground="Black" Cursor="Pen" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
